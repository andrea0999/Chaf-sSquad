<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 3px 0px; -fx-text-fill: black;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.LoginController">

   <children>
      <ImageView fitHeight="400.0" fitWidth="633.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../../resources/login.jpg" />
         </image>
      </ImageView>

      <Text layoutX="163.0" layoutY="41.0" style="-fx-background-color: transparent;" text="LogIn on Chef's Squad">
         <font>
            <Font name="Berlin Sans FB" size="30.0" />
         </font>
      </Text>

      <PasswordField fx:id="passwordField" cache="true" layoutX="176.0" layoutY="135.0" promptText="Password" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 3px 0px;">
         <font>
            <Font size="20.0" />
         </font>
      </PasswordField>
      <Button layoutX="187.0" layoutY="257.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="75.0" style="-fx-background-color: transparent; -fx-text-fill: red; -fx-border-width: 0px 0px 2px 0px; -fx-border-color: white;" text="Close">
         <font>
            <Font name="Belwe Lt BT Light" size="17.0" />
         </font>
      </Button>
      <Button layoutX="366.0" layoutY="258.0" mnemonicParsing="false" onAction="#handleLoginButtonAction" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 2px 0px; -fx-text-fill: red;" text="Login">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <Button fx:id="creazaBucatar" layoutX="131.0" layoutY="349.0" mnemonicParsing="false" onAction="#creazaInregistrareBucatar" style="-fx-background-color: transparent;" text="Creati un cont de Bucatar">
         <font>
            <Font name="Belwe Lt BT Light" size="15.0" />
         </font>
      </Button>
      <Button fx:id="creazaCursant" layoutX="328.0" layoutY="334.0" mnemonicParsing="false" onAction="#creazaInregistrareCursant" style="-fx-background-color: transparent;" text="Creati un cont de Cursant">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
      <TextField fx:id="usernameField" cache="true" layoutX="176.0" layoutY="78.0" prefHeight="57.0" prefWidth="249.0" promptText="UserName" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 3px 0px;">
         <font>
            <Font size="25.0" />
         </font>
      </TextField>
      <Text fx:id="loginMessage" layoutX="437.0" layoutY="111.0" wrappingWidth="107.0" />
      <TextField fx:id="roleField" cache="true" layoutX="176.0" layoutY="182.0" prefHeight="57.0" prefWidth="249.0" promptText="Rol" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 0px 0px 3px 0px;">
         <font>
            <Font size="25.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
